# ── Servidor ──────────────────────────────────────────────────────────────────
PORT=3030
PUBLIC_DIR=./board-client-patinho/public/
MODULE_DIR=./board-module-patinho/
SERVER_DIR=./board-server-patinho/

# ── MongoDB Atlas ─────────────────────────────────────────────────────────────
# Substitua SEU_USUARIO, SUA_SENHA e SEU_CLUSTER pelos valores do MongoDB Atlas
MONGO_URI=mongodb+srv://SEU_USUARIO:SUA_SENHA@SEU_CLUSTER.mongodb.net/patinho-board?appName=Cluster0

# ── Autenticação JWT ──────────────────────────────────────────────────────────
# Gere um segredo forte: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=COLOQUE_UM_SEGREDO_FORTE_AQUI_MINIMO_32_CARACTERES
JWT_EXPIRES_IN=7d

# ── Bcrypt (custo do hash de senha) ───────────────────────────────────────────
BCRYPT_COST=12
